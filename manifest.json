{
  "manifest_version": 2,

  "name": "Mama Poladsky's GIF Blocker",
  "description": "Because those things are just terrible!",
  "version": "1.0",
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "GIF BE GONE!"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["app.js"],
      "run_at":"document_idle"
    }
  ],
  "permissions": [
    "tabs",
    "storage"
  ]
}
